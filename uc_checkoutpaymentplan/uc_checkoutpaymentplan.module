/**
 * Developer function to print variables in a clean way.
 *
 * @param mixed $var
 *   Any variable of anytype.
 */
function pre_var_dump($var , $buffer = false) {
  if ($buffer) {
    ob_start();
    var_dump($var);
    return ob_get_clean();
  }
  
  echo '<pre>';
  var_dump($var);
  echo '</pre>';
}

